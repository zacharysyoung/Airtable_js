// https://github.com/zacharysyoung/Airtable_js/blob/main/.eslintrc.json
{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "camelcase": [
            "error",
            {
                "allow": [
                    "^fld(.+)?_",
                    "^tbl(.+)?_"
                ]
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "line-comment-position": [
            "error",
            {
                "position": "above"
            }
        ],
        "max-len": [
            "error",
            {
                "code": 120,
                "ignoreComments": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "semi": "error",
        "spaced-comment": [
            "error",
            "always"
        ],
        "space-infix-ops": [
            "error"
        ],
        "space-in-parens": "error"
    }
}